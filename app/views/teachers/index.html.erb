<%= turbo_frame_tag "_top" do %>
<main class="container d-flex flex-row" >
    <aside class="col-sm-2 h-100 border">
        <h1>Courses</h1>
        <div class="d-grid col-10 ms-1">
        <%=link_to "New", new_course_path, data: {turbo_frame: "teacher_course_show"}, class:"btn btn-primary" %>
        <%=link_to "Search", courses_path, class:"btn btn-primary mt-2" %>
        </div>

        <section class="mt-3 ">
            <h3>Active Courses</h2>
            <ul class="list-group list-group-flush">  
                <%= render partial: "teachers/course", collection: @courses, as: :course %>
            </ul>
        </section>
    </aside>

    <section class="col-sm-10 h-100 border">
     <%= turbo_frame_tag "teacher_course_show" do %>
        <div class="h-25 border-bottom">
           
                <h3> Name of course </h3>
           
        </div>

        
        <div class="h-75 bg-primary d-flex flex-row">
            <div class="col-sm-9 h-100 border">
                
            </div>
            <div class="col-sm-3 h-100 border">
               
            </div>
        </div>
     <% end %>
    </section>


 </main>
<% end %>